                const id = params.get('id');
                const lugar = document.querySelector("#aqui");

                if (!id) {
                    lugar.innerHTML = '<h3>No se especificó un trabajo</h3><p>Por favor, selecciona un trabajo del portafolio.</p>';
                    return;
                }

                const trabajo = trabajitos.find(t => t.id == id);

                if (trabajo) {
                    lugar.innerHTML = `
                        <h3>${trabajo.title}</h3>
                        <h4>${trabajo.course}</h4>
                        <p>${trabajo.description}</p>
                        <img src="${trabajo.photo}" alt="${trabajo.title}" loading="lazy">
                    `;
